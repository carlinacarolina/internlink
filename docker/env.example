# Docker Environment Configuration for InternLink
# Copy this file to .env and update the values as needed

# Application Configuration
APP_NAME="InternLink"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost:8000

# Database Configuration (PostgreSQL)
DB_CONNECTION=pgsql
DB_HOST=postgres
DB_PORT=5433
DB_DATABASE=internlink
DB_USERNAME=internlink
DB_PASSWORD=password

# Redis Configuration
REDIS_HOST=redis
REDIS_PASSWORD=
REDIS_PORT=6379

# Cache Configuration
CACHE_DRIVER=redis
SESSION_DRIVER=redis
QUEUE_CONNECTION=redis

# Mail Configuration (Update for production)
MAIL_MAILER=smtp
MAIL_HOST=mailhog
MAIL_PORT=1025
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=null
MAIL_FROM_ADDRESS="noreply@internlink.local"
MAIL_FROM_NAME="${APP_NAME}"

# File Storage
FILESYSTEM_DISK=local

# Logging
LOG_CHANNEL=stack
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Ports (for docker-compose)
APP_PORT=8000
VITE_PORT=5173

# Security (Generate strong passwords for production)
# Use: php artisan key:generate
# APP_KEY=base64:your-generated-key-here

# Production Database Credentials (Update for production)
# DB_PASSWORD=your-secure-password-here
# REDIS_PASSWORD=your-redis-password-here
